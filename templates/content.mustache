{{!
    @template block_cgsfeedback/content

    CGSfeedback block content template.
}}

    {{#courses}}
        <div data-userid = "{{userid}}" class = "expansible-container cgsfeedback-course-container cgsfeedback-container-{{courseid}}"
        data-course-grade-categories = "{{coursegradecategories}}">
            <header class="st_table_header">
                <h2 data-courseid = "{{courseid}}">{{coursename}}</h2>
                <span class ="cgsfeedback-expand-icon" data-courseid = "{{courseid}}" title = "Show assessments">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round" data-courseid = "{{courseid}}">
                       <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                       <path d="M6 9l6 6l6 -6"></path>
                    </svg>
                </span>
                <span class ="cgsfeedback-collapse-icon" hidden  data-courseid = "{{courseid}}" title = "Hide assessments">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
                       <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                       <path d="M6 15l6 -6l6 6"></path>
                    </svg>
                </span>
            </header>
        </div>
        <div data-region="cgsfeedback-table-container-{{courseid}}" class="cgsfeedback-table-container">
            <div class="spinner-border loading-course-{{courseid}}-modules" role="status" hidden>
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    {{/courses}}

{{#js}}
    require(['block_cgsfeedback/control'], function(Control) {
        Control.init("{{instanceid}}");
    });
{{/js}}
