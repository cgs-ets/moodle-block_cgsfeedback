{{!
    @template block_cgsfeedback/loading_courses

    CGSfeedback block loading courses template.
}}


{{#hasinstructions}}
    <div class = "cgsfeedback-instructions-container">
        <i class="fa fa-eye" aria-hidden="true" title ="Hide instructions"></i>
        <span>{{{instructions}}}</span>
    </div>
{{/hasinstructions}}

<div id = "cgsfeedback-loading-container" class = 'cgsfeedback-loading-courses-first'>
    <div class="spinner-border cgsfeedback-loading-courses " role="status" data-user = "{{userid}}" data-instanceid = "{{instanceid}}">
     <span class="sr-only">Loading...</span>
    </div>
</div>

{{#js}}
    require(['block_cgsfeedback/loadingcourses'], function(LoadingCourses) {
        LoadingCourses.init("{{user}}");
    });
{{/js}}
